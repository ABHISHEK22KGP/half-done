<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .loans-div {
            background-color: #f8f9fa; /* Light background */
            border: 2px solid #007bff; /* Blue border */
            padding: 15px;
            margin: 10px 0;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
            transition: transform 0.2s ease-in-out;
        }

        .loans-div:hover {
            transform: scale(1.02);
            box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .loans-div p {
            margin: 5px 0;
            font-size: 16px;
            color: #333;
        }

        .loans-div strong {
            color: #007bff;
        }
    </style>
</head>
<body>
    <% loans.forEach(rate => { %>
        <div class="loans-div" onclick="viewRate('<%= encodeURIComponent(customerName) %>', '<%= encodeURIComponent(customerPhoneNumber) %>', '<%= encodeURIComponent(rate.rateValue) %>')">
            <p><strong>Rate Value:</strong> <%= rate.rateValue %>%</p>
        </div>
    <% }) %>
    
    <script>
        function viewRate(customerName, customerPhoneNumber, rateValue) {
            window.location.href = `/customer/${encodeURIComponent(customerName)}/${encodeURIComponent(customerPhoneNumber)}/${encodeURIComponent(rateValue)}`;
        }
    </script>    
</body>
</html>